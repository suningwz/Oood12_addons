<odoo>
    <record id="bhlab_view_inventory_form" model="ir.ui.view">
        <field name="name">bhlab_stock.inventory.form-add_lot_and_dlc</field>
        <field name="model">stock.inventory</field>
        <field name="inherit_id" ref="stock.view_inventory_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='line_ids']/tree//field[@name='prod_lot_id']" position="attributes">
                <attribute name="string">Code a barre</attribute>
            </xpath>
            <xpath expr="//field[@name='line_ids']/tree//field[@name='partner_id']" position="before">
                <field name="ref"/>
                <field name="expiry_date" widget="date"/>
            </xpath>
        </field>
    </record>

</odoo>
