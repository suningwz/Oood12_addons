<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="dl_account_etat_tva_tree_view">
            <field name="name">account.etat.tva.tree</field>
            <field name="model">account.etat.tva</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree toolbar="1" string="Etat TVA">
                    <field name="name"/>
                    <field name="date_debut"/>
                    <field name="date_fin"/>
                    <field name="type"/>
                    <field name="total_ht"/>
                    <field name="total_tva"/>
                    <field name="total_ttc"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

    <record id="dl_account_etat_tva_form_view" model="ir.ui.view">
        <field name="name">account.etat.tva.form</field>
        <field name="model">account.etat.tva</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Etat TVA">
                <header>
                    <button name="compute_data" type="object" string="Calculer"  states="draft" class="oe_highlight" />
                    <button name="action_validate" string="Valider" states="draft" class="oe_highlight" type="object" />
                    <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                </header>
                <sheet>
                    <h1><field name="name"/></h1>
                    <group>
                        <group>
                            <field name="exercice_id" options='{"no_open": True, "no_create": True}'/>
                            <field name="period_id" domain="[('exercice_id', '=', exercice_id)]" options='{"no_open": True, "no_create": True}'/>
                            <field name="date_debut"/>
                            <field name="date_fin"/>

                        </group>
                        <group>
                            <field name="currency_id" invisible="1"/>
                            <field name="type"/>
                            <field name="type_calcul"/>

                        </group>
                    </group>
                    <notebook>
                        <page string="Details">
                            <field name="line_ids" nolabel="1">
                                <tree editable="Bottom">
                                    <field name="invoice_id"/>
                                    <field name="piece_id"/>
                                    <field name="account"/>
                                    <field name="partner_ai"/>
                                    <field name="partner_id"/>
                                    <field name="partner_adress"/>
                                    <field name="date"/>
                                    <field name="numero"/>
                                    <field name="partner_rc"/>
                                    <field name="total_ht"/>
                                    <field name="total_tva"/>
                                </tree>
                            </field>
                            <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                                <field name="total_ht" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                                <field name="total_tva" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                                <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                    <label for="total_ttc" />
                                </div>
                                <field name="total_ttc" nolabel="1" class="oe_subtotal_footer_separator" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                            </group>
                        </page>
                        <page string="Paramétrage" invisible="1">
                            <group>
                                <group>
                                    <field name="journal_ch" />
<!--                                    <field name="j/ournal_ids" widget="many2many_tags"/>-->
<!--                                    <field name="account_ht" widget="many2many_tags"/>-->
<!--                                    <field name="account_tva" widget="many2many_tags"/>-->
                                    <field name="ht_inv_tva"  attrs="{'invisible':[('type','=', 'Acht')]}"/>
                                    <field name="tva_inv_tva" attrs="{'invisible':[('type','=', 'Achat')]}"/>
                                    <field name="ht_ach_tva"  attrs="{'invisible':[('type','=', 'Invest')]}"/>
                                    <field name="tva_ach_tva" attrs="{'invisible':[('type','=', 'Invest')]}"/>
                                </group>
                                <group>
<!--                                    <field name="journal_ch" />-->
<!--                                    <field name="ht_ch" />-->
<!--                                    <field name="tva_ch"/>-->
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
