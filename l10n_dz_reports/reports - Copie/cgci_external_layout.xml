<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_header_lt" inherit_id="web.external_layout_standard">
        <xpath expr="//div[@class='header']" position="replace">

            <div class="header">
                <div class="row mt32 mb32">
                        <div class="col-xs-6">
                            <h4>DESIGNATION DE L'ENTREPRISE : <strong><span t-field="o.company_id.name"/></strong></h4>
                            <p><h4>N° D'IDENTIFICATION : <strong><span t-field="o.company_id.nif"/></strong></h4></p>
                        </div>
                        <div class="col-xs-5 col-xs-push-1">
                            <h4 style="text-align:right">Tableau N° <strong><span t-field="o.model_id.tableau_num"/></strong></h4>
                            <p><h4 style="text-align:right">Résultat du <span t-field="o.date_debut"/> au <span t-field="o.date_fin"/></h4></p>
                        </div>
                    </div>
            </div>
        </xpath>
    </template>


